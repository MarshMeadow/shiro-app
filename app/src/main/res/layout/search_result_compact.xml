<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
>
    <androidx.cardview.widget.CardView
            android:id="@+id/backgroundCard"
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:elevation="10dp"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardBackgroundColor="?attr/backgroundColorDark"
            android:clickable="true"
            android:focusable="true"
            android:nextFocusRight="@+id/bookmark_holder"
            android:nextFocusLeft="@+id/bookmark_holder"
    >
        <!-- USING CROP RATIO (182/268), centerCrop for fill -->

        <ImageView
                android:layout_gravity="left"
                android:id="@+id/imageView"
                android:scaleType="centerCrop"
                android:layout_width="54dp"
                android:layout_height="match_parent"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                tools:ignore="RtlHardcoded"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
        >
            <TextView
                    android:gravity="left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="70dp"
                    android:layout_marginEnd="70dp"
                    android:textColor="?attr/white"
                    android:id="@+id/imageText"
                    android:textStyle="bold"
                    android:maxLines="3"
                    tools:ignore="RtlHardcoded"/>
            <TextView
                    android:gravity="left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="70dp"
                    android:layout_marginEnd="70dp"
                    android:textColor="?attr/white"
                    android:id="@+id/imageSubText"
                    android:textSize="10sp"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    tools:ignore="RtlHardcoded"/>
        </LinearLayout>
        <ImageView
                android:id="@+id/title_bookmark"
                android:background="@color/transparent"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:elevation="10dp"
                android:layout_margin="20dp"
                android:src="@drawable/outlined_heart"
                android:layout_gravity="center|right"
                android:contentDescription="@string/bookmark_btt_hint" tools:ignore="RtlHardcoded"/>
        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_gravity="center|right"
                android:focusable="true"
                android:clickable="true"
                android:id="@+id/bookmark_holder"
                android:background="@drawable/video_tap_button"
                android:nextFocusLeft="@+id/backgroundCard"
                android:nextFocusRight="@+id/backgroundCard"
                android:contentDescription="@string/favorite_show"
                tools:ignore="RtlHardcoded">
        </ImageView>


    </androidx.cardview.widget.CardView>
</LinearLayout>